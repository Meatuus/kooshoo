#footer {
  height: 50px;
  position: fixed;
  bottom: 0px;
  left: 0px;
  line-height: 50px;
  color: #aaa;
  text-align: center;
  width: 100%;

}
@media only screen and (max-width: 960px){
  #actions li {
    padding: 15px 6px;
  }
}
@media only screen and (max-width: 768px){
  #container {
    width: 90%;
    margin: 0 auto;
  }
  .share_kids {
    padding: 5px;
    font-size: 1.5em;
  }
  .share_img img{
    width:100%;
  }
  #welcome {
    font-size: 15px;
    padding: 0;
  }
  #footer {
    display: block;
    position: static;
  }
  #actions li {
    float: none;
    border: none;
    border-bottom: 1px solid #ddd;
    width: 100% !important;
    padding: 20px 0px;
  }
  #progress {
    position: fixed;
    bottom: 0px;
    left: 0px;
    width: 100%;
    padding: 10px;
    z-index: 100;
    margin: 0px;
    border-radius: 0px;
    border-top: 1px solid rgba(0,0,0,0.1);
  }
}
