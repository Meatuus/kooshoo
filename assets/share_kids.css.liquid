
body {
  font-size: 14px;
  color: #241f20;
  min-height: 100%;
  background-color: #fff;
}

* { -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box; }


a, a:visited, a:active, a:hover {
  text-decoration: none;
  outline: none;    
}
.share_kids{
  text-align:center;
  background-color: rgba(63, 207, 213, 0.9);
  color: #fff;
  padding: 20px;
  margin: 0 0 1px;
  width:100%;
  font-size: 3em;
  line-height: 1em;
}
.share_img{
  text-align:center;
}
.share_img img{
  max-width:525px;
  width:auto;
}
#welcome {
  font-size: 17px;
  padding: 15px 90px 25px;
  line-height: 1.3em;
}

#container {
  float: left;
  width: 100%;
}
.progress-top-border{
  border-top: 1px solid rgba(0,0,0,0.1);
}
#progress {
  background-color: #fff;
  padding: 5px;
  margin-top: 5px;
  margin-bottom: 30px;
  box-shadow: 1px 2px 3px rgba(0,0,0,0.3);
}

#progress .percent {
  background: #87C442;
  background-image: -webkit-gradient(linear,50% 0,50% 100%,color-stop(0%,#9FD04F),color-stop(100%,#87C442));
  background-image: -webkit-linear-gradient(#9FD04F,#87C442);
  background-image: -moz-linear-gradient(#9FD04F,#87C442);
  background-image: -o-linear-gradient(#9FD04F,#87C442);
  background-image: -ms-linear-gradient(#9FD04F,#87C442);
  background-image: linear-gradient(#9FD04F,#87C442);
  width: 1%;
  height: 30px;
  position: relative;
  transition:all .5s ease-in-out;
}

#progress .percent .number {
  position: absolute;
  top: 0px;
  height: 30px;
  line-height: 30px;
  color: #000;
  right: -40px;
  width: 40px;
  text-align: center;
  font-weight: bold;
}

#actions {
  margin: 0px;
  padding: 0px;
  overflow: hidden;
  list-style-type: none;
}
#actions li {
  float: left;
  width: 25%;
  padding: 15px 21px;
  text-align: center;
  border-right: 1px solid #b2b2b2;
  min-height:225px;
  height:auto;
}
#actions li h4{
  line-height:1em;
  margin-bottom: 24px;
}
#actions li p{
  margin-bottom: 15px;
  font-weight:500;
}
#actions li:nth-child(1) {
  border-left: none;
}

#actions li:nth-child(2) p {
  margin-bottom:34px;
}

#actions li:nth-child(4) {
  border-right: none;
}



